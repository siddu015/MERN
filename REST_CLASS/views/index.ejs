<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Quora</title>
    <link rel="stylesheet" href="/style.css">
    <script src="/app.js" defer></script>
</head>
<body>
    <h1>Quora Posts</h1>
    <% for(post of posts) { %>
        <div class="post">
            <h3 class="user"> @<%= post.username %> </h3>
            <h4 class="content"> <%= post.content %> </h4>
            <div class="detail-Post post-btn">
                <a href="http://localhost:3800/posts/<%= post.id %>">See in detail</a>
            </div>
            <div class="edit-Post post-btn">
                <a href="http://localhost:3800/posts/<%= post.id %>/edit">Edit Post</a>
            </div>
            <form method="post" action="/posts/<%=post.id%>?_method=DELETE" class="delete-post">
                <button type="submit">Delete Post</button>
            </form>
        </div>
    <% } %>

    <div class="newPost">
        <a href="http://localhost:3800/posts/new" >Create New Post</a>
    </div>
</body>
</html>